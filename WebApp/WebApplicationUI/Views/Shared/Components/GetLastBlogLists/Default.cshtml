@model List<EntityLayer.Concrete.Blog>

<div class="single-gd tech-btm">
    <h4>Son Yayımlanan Blog</h4>
    <div class="blog-grids">
        @foreach (var item in Model)
        {
            <div class="blog-grid-left">
                <a href="/Blog/BlogReadAll/@item.BlogID/">
                    <img src="@item.BlogImage" class="img-fluid" alt="">
                </a>
            </div>
            <div class="blog-grid-right">
                <h5>
                    <a href="/Blog/BlogReadAll/@item.BlogID/"> @item.BlogTitle</a>
                </h5>
                <p>@item.BlogContent.Substring(0, item.BlogContent.Substring(0,80).LastIndexOf(" "))..</p>
            </div>
        }
        <div class="clearfix"> </div>
    </div>
</div>